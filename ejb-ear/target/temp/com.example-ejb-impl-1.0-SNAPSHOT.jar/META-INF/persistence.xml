<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             version="3.1"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_1.xsd">

    <persistence-unit name="courantPU" transaction-type="JTA">
        <!-- DataSource déclarée dans WildFly -->
        <jta-data-source>java:/PostgresCourantDS</jta-data-source>

        <!-- Pas besoin de lister les entités, Hibernate scanne tout le classpath -->
        
        <properties>
            <!-- Génération auto du schéma -->
            <property name="jakarta.persistence.schema-generation.database.action" value="update"/>
            
            <!-- Optionnel mais pratique pour debug -->
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
        </properties>
    </persistence-unit>

</persistence>
